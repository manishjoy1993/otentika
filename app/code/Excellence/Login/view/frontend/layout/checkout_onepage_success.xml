<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceBlock name="checkout.success">
            <action ifconfig="checkout/login/enabled" method="setTemplate">
                <argument name="template" xsi:type="string">Excellence_Login::checkout/success.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="checkout.registration" remove="true"/>
    </body>
</page>
